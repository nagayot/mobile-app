#registration-page.registration-page
  .registration-page__contents
    .registration-page__contents__top
      .registration-page__contents__top__text
        新規登録
    .registration-page__contents__main
      .registration-page__contents__main__form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .tologin
            =link_to 'IDをお持ちの方はこちら', new_user_session_path
          .field
            = f.label :ニックネーム
            %br/
            = f.text_field :name, autofocus: true, autocomplete: "name"
          .field
            = f.label :メールアドレス
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email"
          .field
            = f.label :パスワード
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} 文字以上)
            %br/
            = f.password_field :password, autocomplete: "new-password"
          .field
            = f.label :パスワード（確認用）
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password"
          .actions
            = f.submit "登録する"
